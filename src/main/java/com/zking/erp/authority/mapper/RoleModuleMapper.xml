<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zking.erp.authority.mapper.RoleModuleMapper" >
  <resultMap id="BaseResultMap" type="com.zking.erp.authority.model.RoleModule" >
    <constructor >
      <arg column="roleid" jdbcType="VARCHAR" javaType="java.lang.String" />
      <arg column="moduleid" jdbcType="VARCHAR" javaType="java.lang.String" />
    </constructor>
  </resultMap>
  <insert id="insert" parameterType="com.zking.erp.authority.model.RoleModule" >
    insert into t_role_module (roleid, moduleid)
    values (#{roleid,jdbcType=VARCHAR}, #{moduleid,jdbcType=VARCHAR})
  </insert>
  <insert id="insertSelective" parameterType="com.zking.erp.authority.model.RoleModule" >
    insert into t_role_module
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="roleid != null" >
        roleid,
      </if>
      <if test="moduleid != null" >
        moduleid,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="roleid != null" >
        #{roleid,jdbcType=VARCHAR},
      </if>
      <if test="moduleid != null" >
        #{moduleid,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  <select id="queryRoleModule" resultType="map" parameterType="com.zking.erp.authority.Vo.RoleModuleVo">
  SELECT m.id AS moduleid,r.`id` AS roleid,m.pid ,m.text
  FROM t_role r,t_role_module rm,t_module m WHERE r.`id`=rm.roleid GROUP BY m.id
  </select>

</mapper>